<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/TV1"
        android:layout_width="88dp"
        android:layout_height="61dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="68dp"
        android:layout_marginEnd="26dp"
        android:text="Random 1"
        android:textAlignment="center"
        android:textSize="20sp"
        app:layout_constraintEnd_toStartOf="@+id/TV3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/TV3"
        android:layout_width="88dp"
        android:layout_height="61dp"
        android:layout_marginStart="29dp"
        android:layout_marginEnd="24dp"
        android:text="Random 3"
        android:textAlignment="center"
        android:textSize="20sp"
        app:layout_constraintEnd_toStartOf="@+id/TV5"
        app:layout_constraintStart_toEndOf="@+id/TV1"
        app:layout_constraintTop_toTopOf="@+id/TV1" />

    <TextView
        android:id="@+id/TV5"
        android:layout_width="88dp"
        android:layout_height="61dp"
        android:layout_marginStart="26dp"
        android:layout_marginEnd="40dp"
        android:text="Random 5"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/TV3"
        app:layout_constraintTop_toTopOf="@+id/TV1" />

    <TextView
        android:id="@+id/TV2"
        android:layout_width="88dp"
        android:layout_height="61dp"
        android:layout_marginTop="35dp"
        android:text="Random 2"
        android:textAlignment="center"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@+id/TV1"
        app:layout_constraintStart_toStartOf="@+id/TV1"
        app:layout_constraintTop_toBottomOf="@+id/TV1" />

    <TextView
        android:id="@+id/TV4"
        android:layout_width="88dp"
        android:layout_height="61dp"
        android:layout_marginTop="35dp"
        android:text="Random 4"
        android:textAlignment="center"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@+id/TV3"
        app:layout_constraintStart_toStartOf="@+id/TV3"
        app:layout_constraintTop_toBottomOf="@+id/TV3" />

    <TextView
        android:id="@+id/TV6"
        android:layout_width="88dp"
        android:layout_height="61dp"
        android:layout_marginTop="35dp"
        android:text="Random 6"
        android:textAlignment="center"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@+id/TV5"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/TV5"
        app:layout_constraintTop_toBottomOf="@+id/TV5" />

    <EditText
        android:id="@+id/ET1"
        android:layout_width="120dp"
        android:layout_height="70dp"
        android:layout_marginTop="17dp"
        android:ems="10"
        android:hint="Enter answer"
        android:inputType="number"
        android:textAlignment="center"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/TV2"
        app:layout_constraintHorizontal_bias="0.65"
        app:layout_constraintStart_toStartOf="@+id/TV2"
        app:layout_constraintTop_toBottomOf="@+id/TV2" />

    <EditText
        android:id="@+id/ET2"
        android:layout_width="120dp"
        android:layout_height="70dp"
        android:layout_marginTop="17dp"
        android:ems="10"
        android:hint="Enter answer"
        android:inputType="number"
        android:textAlignment="center"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/TV4"
        app:layout_constraintHorizontal_bias="0.636"
        app:layout_constraintStart_toStartOf="@+id/TV4"
        app:layout_constraintTop_toBottomOf="@+id/TV4" />

    <EditText
        android:id="@+id/ET3"
        android:layout_width="120dp"
        android:layout_height="70dp"
        android:layout_marginTop="17dp"
        android:ems="10"
        android:hint="Enter answer"
        android:inputType="number"
        android:textAlignment="center"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/TV6"
        app:layout_constraintHorizontal_bias="0.272"
        app:layout_constraintStart_toStartOf="@+id/TV6"
        app:layout_constraintTop_toBottomOf="@+id/TV6" />

    <ImageView
        android:id="@+id/X1"
        android:layout_width="97dp"
        android:layout_height="91dp"
        android:layout_marginTop="64dp"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="@+id/ET1"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/ET1"
        app:layout_constraintTop_toBottomOf="@+id/ET1"
        app:srcCompat="@drawable/ex" />

    <ImageView
        android:id="@+id/X2"
        android:layout_width="99dp"
        android:layout_height="94dp"
        android:layout_marginTop="64dp"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="@+id/ET2"
        app:layout_constraintHorizontal_bias="0.571"
        app:layout_constraintStart_toStartOf="@+id/ET2"
        app:layout_constraintTop_toBottomOf="@+id/ET2"
        app:srcCompat="@drawable/ex" />

    <ImageView
        android:id="@+id/X3"
        android:layout_width="104dp"
        android:layout_height="95dp"
        android:layout_marginTop="64dp"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="@+id/ET3"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/ET3"
        app:layout_constraintTop_toBottomOf="@+id/ET3"
        app:srcCompat="@drawable/ex" />

    <Button
        android:id="@+id/Test1"
        android:layout_width="101dp"
        android:layout_height="65dp"
        android:layout_marginTop="64dp"
        android:onClick="check1"
        android:text="test1"
        android:textColorLink="#404040"
        app:layout_constraintEnd_toEndOf="@+id/X1"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/X1"
        app:layout_constraintTop_toBottomOf="@+id/X1" />

    <Button
        android:id="@+id/Test2"
        android:layout_width="101dp"
        android:layout_height="65dp"
        android:layout_marginTop="60dp"
        android:onClick="check2"
        android:text="test2"
        app:layout_constraintEnd_toEndOf="@+id/X2"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/X2"
        app:layout_constraintTop_toBottomOf="@+id/X2" />

    <Button
        android:id="@+id/Test3"
        android:layout_width="101dp"
        android:layout_height="65dp"
        android:layout_marginTop="60dp"
        android:onClick="check3"
        android:text="test3"
        app:layout_constraintEnd_toEndOf="@+id/X3"
        app:layout_constraintHorizontal_bias="0.333"
        app:layout_constraintStart_toStartOf="@+id/X3"
        app:layout_constraintTop_toBottomOf="@+id/X3" />

    <Button
        android:id="@+id/Restart"
        android:layout_width="101dp"
        android:layout_height="65dp"
        android:layout_marginBottom="32dp"
        android:onClick="restart"
        android:text="restart"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/Test3"
        app:layout_constraintStart_toStartOf="@+id/Test1" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="425dp"
        android:layout_height="19dp"
        android:layout_marginTop="84dp"
        android:text="________________________________________________________________________________________________________________________"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@+id/TV3"
        tools:layout_editor_absoluteX="-7dp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="39dp"
        android:layout_height="32dp"
        android:layout_marginTop="120dp"
        android:text="+"
        android:textAlignment="center"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/TV1"
        app:layout_constraintHorizontal_bias="0.228"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="36dp"
        android:layout_height="32dp"
        android:layout_marginTop="120dp"
        android:text="+"
        android:textAlignment="center"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/TV3"
        app:layout_constraintStart_toEndOf="@+id/textView2"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="34dp"
        android:layout_height="31dp"
        android:layout_marginTop="120dp"
        android:text="+"
        android:textAlignment="center"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/TV5"
        app:layout_constraintHorizontal_bias="0.56"
        app:layout_constraintStart_toEndOf="@+id/textView3"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="2dp"
        android:layout_height="305dp"
        android:text="|||||||||||||||||||||||||||||||||||||||||"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.327"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="2dp"
        android:layout_height="305dp"
        android:text="||||||||||||||||||||||||||||||||||||||||"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.672"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>